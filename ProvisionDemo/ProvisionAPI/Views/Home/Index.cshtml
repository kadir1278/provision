@model IEnumerable<ProvisionDataLayer.Models.CurrencyCode>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
    <link href="~/css/main.css" rel="stylesheet" />
    <script src="https://d3js.org/d3.v4.min.js"></script>
</head>
<body>
    <div class="container mt-2">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Currency Search</h4>
                    <h1 hidden id="customMessage" class="panel-title text-center text-danger"></h1>
                </div>
            </div>
        </div>
        <br />
        <div class="input-group mb-3">
            <select class="form-control" aria-label="Currency Code" id="srcText">
                @foreach (var item in Model)
                {
                    <option value="@item.Code">@item.Code</option>
                }
            </select>
            <div class="input-group-append">
                <button id="dataUpdate" class="btn btn-outline-secondary" type="button">Update Data in DB</button>
            </div>
            <div class="input-group-append">
                <button id="searchButton" class="btn btn-outline-secondary" type="button">Search</button>
            </div>
            <div class="input-group-append">
                <button id="codeUpdate" class="btn btn-outline-secondary" type="button">Update Currency Code in DB</button>
            </div>
        </div>

        <div id="graph"></div>


    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/d3.js"></script>
    <script src="~/js/page.js"></script>
</body>
</html>